@model IList<Organization>

<h1>Organizations</h1>

<a asp-action="Create" class="btn btn-primary">Add new organization</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Company number</th>
            <th>Transactions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var organization in Model)
        {
            <partial name="RowPartial" model="organization" />
        }
    </tbody>
</table>


<!-- The Modal -->
<div class="modal" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete Organization</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <p>Are you sure you want to delete this organization?</p>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <form method="post" asp-action="DeleteConfirmed">
                    <input type="hidden" name="Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script>
    $(function(){
        $("[data-role='Delete']").on("click", function()
            {
                var id = $(this).data("id");
                $("#deleteModal input[name='Id']").val(id);
            });
    });
    </script>
}
