@model Organization

<tr>
    <td>@Model.Name</td>
    <td>@Model.Type</td>
    <td>@Model.CompanyNumber</td>
    <td>
        <a class="btn btn-outline-secondary" 
           asp-action="Index" 
           asp-controller="Transactions" 
           asp-route-id="@Model.Id">
            <i class="fa fa-arrows-h"></i> Transactions
        </a>
    </td>
    <td>
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fa fa-edit"></i> Edit
        </a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
            <i class="fa fa-trash"></i> Delete
        </a>
        <button class="btn btn-danger" 
                data-bs-toggle="modal" 
                data-bs-target="#deleteModal" 
                data-id="@Model.Id"
                data-role="Delete">
            <i class="fa fa-trash"></i> Delete with modal
        </button>
    </td>
</tr>